@page
@model RazorPizzeria.Pages.OrdersModel
@{
}

<h3>Orders</h3>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>Pizza Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.PizzaOrders){
            <tr>
                <td>@order.Id</td>
                <td>@order.PizzaName</td>
                <td>$ @order.BasePrice.00</td>
            </tr>
        }
        
    </tbody>
</table>